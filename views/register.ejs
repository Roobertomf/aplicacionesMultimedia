<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="resources/css/style.css" />
  <title>Registro</title>
</head>

<body>
  <div class="container-fluid vh-100" style="margin-top: 300px">
    <div class="" style="margin-top: 200px">
      <div class="rounded d-flex justify-content-center">
        <div class="col-md-8 col-sm-12 shadow-lg p-5 bg-light">
          <div class="text-center">
            <h3 class="text-primary">Registro</h3>
          </div>
          <form action="register" method="post">
            <div class="p-4 text-center d-grid gap-2">
              <div class="input-group ">
                <input type="text" class="form-control" placeholder="Nombre(s)" name="nombre">
                <input type="text" class="form-control" placeholder="Apellido Paterno" name="appaterno">
                <input type="text" class="form-control" placeholder="Apellido Materno" name="apmaterno">
              </div>

              <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-person-plus-fill text-black"></i></span>
                <input type="email" class="form-control" placeholder="Correo electronico" name="correo" id="correo"
                  required />
              </div>
              <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi-key-fill text-black"></i></span>
                <input id="contraseña" type="password" class="form-control" placeholder="contraseña" name="password"
                  required />
              </div>
              <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi-key-fill text-black"></i></span>
                <input id="contraseñaconf" type="password" class="form-control" placeholder=" Confirma contraseña"
                  required />
              </div>
              <select class="form-select" name="rol" required>
                <option value="" disabled selected>Profesor o Estudiante</option>
                <option value="estudiante">Estudiante</option>
                <option value="profesor">Profesor</option>

              </select>
              <button class="btn btn-primary text-center mt-2 btn-lg" type="submit" id="register"
                disabled>Registrarse</button>
              <a class="btn btn-secondary text-center mt-2 btn-lg" href="/">Cancelar</a>


              <script>
                const inputcontraseña = document.getElementById("contraseña");
                const inputConfContraseña = document.getElementById("contraseñaconf");
                const register = document.getElementById("register");
                let contraseña, confirmacion;
                inputcontraseña.addEventListener("focusout", (event) => {
                  //event.preventDefault();
                  contraseña = inputcontraseña.value;
                  // console.log(contraseña);
                });
                inputConfContraseña.addEventListener("focusout", (event) => {
                  //event.preventDefault();
                  confirmacion = inputConfContraseña.value;
                  if (confirmacion !== contraseña) {
                    alert("Las contraseñas no coinciden");
                  } else {
                    register.disabled = false
                  }
                });
              </script>

              <!-- <p class="text-center text-primary">Forgot your password?</p> -->
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if (typeof alert != "undefined")  { %>
  <script>
    Swal.fire({
      title: '<%= alertTitle %>',
      text: '<%= alertMessage %>',
      icon: '<%= alertIcon %>',
      showConfirmButton: '<%= showConfirmButton %>',
      timer: '<%= timer %>'
    }).then(() => {
      window.location = '<%= ruta %>'
    })
  </script>
  <% } %>
</body>

</html>